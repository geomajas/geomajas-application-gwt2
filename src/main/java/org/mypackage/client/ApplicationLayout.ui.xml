<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field='resource' type='org.mypackage.client.resource.ApplicationResource'/>

    <g:DockLayoutPanel unit="PX" width="100%" height="100%">
        <!-- Page layout -->
        <g:west size="375">
            <g:ScrollPanel>
                <g:HTMLPanel>
                    <g:HTMLPanel ui:field="featureInfoPanel">
                        <h2>Feature details</h2>
                        <g:VerticalPanel ui:field="featureInfoContent"/>
                    </g:HTMLPanel>
                    <g:HTMLPanel>
                        <h2>Legend</h2>
                        <g:VerticalPanel ui:field="legendPanel"/>
                    </g:HTMLPanel>
                </g:HTMLPanel>
            </g:ScrollPanel>
        </g:west>
        <g:center>
            <g:SimpleLayoutPanel>
                <g:SimpleLayoutPanel ui:field='mapPanel' width="100%" height="100%"/>
            </g:SimpleLayoutPanel>
        </g:center>
    </g:DockLayoutPanel>

</ui:UiBinder>
